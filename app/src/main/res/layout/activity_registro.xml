<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F5596"
        tools:context=".RegistroActivity">

        <View
            android:id="@+id/viewRectanguloRegistro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageViewLogoRegistro"
            android:layout_width="137dp"
            android:layout_height="129dp"
            android:layout_marginTop="39dp"
            android:contentDescription="@string/Logo"
            android:src="@drawable/bloc_notes_2__1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPlanProRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="179dp"
            android:fontFamily="@font/jsmath_cmti10"
            android:text="@string/planpro"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCorreoRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/correo"
            android:textColor="#575757"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextIngresarCorreoRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextIngresarCorreoRegistro"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:autofillHints="example@email.com"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/ingresarcorreo"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewCrearUsernameRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewRectanguloRegistro"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewCrearUsernameRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/crearusername"
            android:textColor="#575757"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCrearUsernameRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextCrearUsernameRegistro"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:layout_marginTop="180dp"
            android:autofillHints="example@email.com"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/crearusername"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewRectanguloRegistro"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/crearpassword"
            android:textColor="#575757"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCrearPasswordRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextCrearPasswordRegistro"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:layout_marginTop="308dp"
            android:autofillHints="Password"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/ingresa_tu_contraseña"
            android:importantForAccessibility="yes"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewConfirmarPasswordRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewRectanguloRegistro"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewConfirmarPasswordRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/confirmarpassword"
            android:textColor="#575757"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextConfirmarPasswordRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextConfirmarPasswordRegistro"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:layout_marginTop="432dp"
            android:autofillHints="Password"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/confirma_tu_contraseña"
            android:importantForAccessibility="yes"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonCrearCuentaRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewRectanguloRegistro"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonCrearCuentaRegistro"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2F5596"
            android:text="@string/crearcuenta"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textViewIniciarSesionRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewIniciarSesionRegistro"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="576dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="#575757"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewRectanguloRegistro" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>