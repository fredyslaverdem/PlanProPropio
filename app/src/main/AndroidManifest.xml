<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="PlanPro"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlanProPropio"
        android:windowSoftInputMode="adjustPan"
        tools:targetApi="34">
        <activity
            android:name=".DetalleHabitosActivity"
            android:exported="false" />
        <activity
            android:name=".EditarNotaActivity"
            android:exported="true" />
        <activity
            android:name=".ListaNotasNoFinalizadas"
            android:exported="true" />
        <activity
            android:name=".ListaNotasFinalizadas"
            android:exported="true" />
        <activity
            android:name=".UsuarioActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AgregarNotasActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CargaActivity" />
        <activity android:name=".RecuperarActivity" />
        <activity android:name=".RegistroActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".Habitos" />
        <activity android:name=".Crearhabitos" />
    </application>

</manifest>